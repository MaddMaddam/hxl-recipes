{
  "name": "ifrc appeals",
  "title": "Appeals",
  "type": "cookbook",
  "columns": [
    "#crisis+name",
    "#meta+appeal+type",
    "#status",
    "#meta+appeal+id",
    "#beneficiaries+num",
    "#value+requested",
    "#value+funded",
    "#date+start+year",
    "#date+start+yearmonth"
  ],
  "recipes": [
    {
      "name": "DREF and Emergency Appeals over the Last Year",
      "title": "DREF and Emergency Appeals over the Last Year",
      "description": "Number of Disaster Response Emergency Fund and Emergency appeals per month over the past year",
      "type": "timeseries",
      "ingredients": {
        "aggregateFunctions": [
          "count"
        ],
        "aggregateColumns": [
          "#date+start+yearmonth"
        ],
        "filtersWith": [
            {
                "#date+start+year": "$MAX$"
            }
        ],
        "valueColumns": [
          "#meta+appeal+id"
        ]
      }
    }
  ]
}

